@model CarDetailsVM

<h2>@Model.Name</h2>

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.PictureUrl" />
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price.ToString("C")</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="DealerCart"
                   asp-action="AddCarToDealerCart"
                   asp-route-id="@Model.CarId">Add to cart</a>
            </p>
        </div>
    </div>
</div>