@model CarListVM


<h1>@Model.BrandName</h1>
@foreach (var car in Model.Cars)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@car.ThumbnailPictureUrl" alt="" />
            <div class="caption">
                <h4 class="pull-right">@car.Price.ToString("C")</h4>
                <h4>
                    <a asp-controller="Car" asp-action="Details" asp-route-id="@car.CarId">@car.Name</a>
                </h4>
                <p>@car.ShortDescription</p>
            </div>
        </div>
    </div>
}
